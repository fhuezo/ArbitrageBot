{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "lib":  [
                                        "ES2022",
                                        "DOM"
                                    ],
                            "module":  "NodeNext",
                            "moduleResolution":  "NodeNext",
                            "types":  [
                                          "node"
                                      ],
                            "esModuleInterop":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "strict":  true,
                            "skipLibCheck":  true,
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "resolveJsonModule":  true,
                            "noUncheckedIndexedAccess":  true
                        },
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ]
}

